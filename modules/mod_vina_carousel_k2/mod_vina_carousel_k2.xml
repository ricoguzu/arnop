<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" client="site" method="upgrade">

<!-- Author Block -->
	<name>Vina Item Carousel for K2</name>
	<author>VinaGecko.com</author>
	<creationDate>July 16, 2014</creationDate>
	<copyright>Copyright (C) 2014 VinaGecko.com. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenseses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>admin@vinagecko.com</authorEmail>
	<authorUrl>http://VinaGecko.com</authorUrl>
	<version>1.0.0</version>

<!-- Description Block -->
	<description>
		<![CDATA[<div style="border: 1px solid red; border-radius: 7px; padding: 10px;">
			We are pleased to announce that we have released new module for <strong>Joomla 3.x and K2 Component</strong>: <strong>Vina Item Carousel for K2</strong>. This module will help you to show more items of <strong>K2 Component</strong> in beautiful responsive carousel slider. It has options for setting the pagination/sliding speed, enabling/disabling autoplay, showing bullet navigation and more.<br><br>
			<strong>VinaGecko.com</strong> - Premium <a href="http://vinagecko.com/joomla-modules" target="_blank">Joomla Modules</a>, <a href="http://vinagecko.com/joomla-plugins" target="_blank">Joomla Plugins</a>, <a href="http://vinagecko.com/joomla-templates" target="_blank">Joomla Templates</a>.
		</div>]]>
	</description>

<!-- Files upload Block -->	
	<files>
		<filename module="mod_vina_carousel_k2">mod_vina_carousel_k2.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>assets</folder>
		<folder>languages</folder>
		<folder>tmpl</folder>
	</files>

<!-- Languages Block -->
	<languages>
		<language tag="en-GB">languages/en-GB.mod_vina_carousel_k2.ini</language>
	</languages>
	
<!-- Config Block -->
	<config>
		<fields name="params">
			<!-- Basic Block -->
			<fieldset name="basic" addfieldpath="/administrator/components/com_k2/elements/">
				<field
                    name="moduleWidth"
                    type="text"
                    label="VINA_CAROUSEL_K2_MWIDTH"
                    default="100%"
                    description="VINA_CAROUSEL_K2_MWIDTH_DESC" />
				<field
                    name="moduleHeight"
                    type="text"
                    label="VINA_CAROUSEL_K2_MHEIGHT"
                    default="auto"
                    description="VINA_CAROUSEL_K2_MHEIGHT_DESC" />
				<field
                    name="moduleMargin"
                    type="text"
                    label="VINA_CAROUSEL_K2_MMARGIN"
                    default="0px"
                    description="VINA_CAROUSEL_K2_MMARGIN_DESC" />
				<field
                    name="modulePadding"
                    type="text"
                    label="VINA_CAROUSEL_K2_MPADDING"
                    default="10px 5px"
                    description="VINA_CAROUSEL_K2_MPADDING_DESC" />
				<field
					name="bgImage"
					type="media" 
					label="VINA_CAROUSEL_K2_BACKGROUND_IMAGE" 
					description="VINA_CAROUSEL_K2_BACKGROUND_IMAGE_DESC" 
					size="30"
					default="" />
				<field 
                    name="isBgColor" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_IS_BG_COLOR" 
                    description="VINA_CAROUSEL_K2_IS_BG_COLOR_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="bgColor"
					type="color" 
					label="VINA_CAROUSEL_K2_BG_COLOR" 
					description="VINA_CAROUSEL_K2_BG_COLOR_DESC" 
					size="30"
					default="#CCCCCC" />
				
				<field type="spacer" name="@item" hr="true" />
				<field
                    name="itemMargin"
                    type="text"
                    label="VINA_CAROUSEL_K2_IMARGIN"
                    default="0 5px"
                    description="VINA_CAROUSEL_K2_IMARGIN_DESC" />
				<field
                    name="itemPadding"
                    type="text"
                    label="VINA_CAROUSEL_K2_IPADDING"
                    default="10px"
                    description="VINA_CAROUSEL_K2_IPADDING_DESC" />
				<field 
                    name="isItemBgColor" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_IS_ITEM_BGCOLOR" 
                    description="VINA_CAROUSEL_K2_IS_ITEM_BGCOLOR_DESC">
                        <option value="0">JNO</option>
                        <option value="1">JYES</option>
                </field>
				<field
					name="itemBgColor"
					type="color" 
					label="VINA_CAROUSEL_K2_ITEM_BGCOLOR" 
					description="VINA_CAROUSEL_K2_ITEM_BGCOLOR_DESC" 
					size="30"
					default="#FFFFFF" />
				<field
					name="itemTextColor"
					type="color" 
					label="VINA_CAROUSEL_K2_ITEM_TEXT_COLOR" 
					description="VINA_CAROUSEL_K2_ITEM_TEXT_COLOR_DESC" 
					size="30"
					default="#333333" />
				<field
					name="itemLinkColor"
					type="color" 
					label="VINA_CAROUSEL_K2_ITEM_LINK_COLOR" 
					description="VINA_CAROUSEL_K2_ITEM_LINK_COLOR_DESC" 
					size="30"
					default="#0088CC" />
			</fieldset>
			
			<!-- Source Block -->
			<fieldset name="carousel">
				<field
                    name="itemsVisible"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS"
                    default="4"
                    description="VINA_CAROUSEL_K2_ITEMS_DESC" />
				<field
                    name="itemsDesktop"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS_DESKTOP"
                    default="[1170,4]"
                    description="VINA_CAROUSEL_K2_ITEMS_DESKTOP_DESC" />
				<field
                    name="itemsDesktopSmall"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS_DESKTOP_SMALL"
                    default="[980,3]"
                    description="VINA_CAROUSEL_K2_ITEMS_DESKTOP_SMALL_DESC" />
				<field
                    name="itemsTablet"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS_TABLET"
                    default="[800,3]"
                    description="VINA_CAROUSEL_K2_ITEMS_TABLET_DESC" />
				<field
                    name="itemsTabletSmall"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS_TABLET_SMALL"
                    default="[650,2]"
                    description="VINA_CAROUSEL_K2_ITEMS_TABLET_SMALL_DESC" />
				<field
                    name="itemsMobile"
                    type="text"
                    label="VINA_CAROUSEL_K2_ITEMS_MOBILE"
                    default="[450,1]"
                    description="VINA_CAROUSEL_K2_ITEMS_MOBILE_DESC" />
				
				<field type="spacer" name="@carousel" hr="true" />
				<field
                    name="singleItem"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_SINGLE_ITEM"
                    description="VINA_CAROUSEL_K2_SINGLE_ITEM_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="itemsScaleUp"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_ITEMS_SCALEUP"
                    description="VINA_CAROUSEL_K2_ITEMS_SCALEUP_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="slideSpeed"
                    type="text"
                    label="VINA_CAROUSEL_K2_SLIDE_SPEED"
                    default="200"
                    description="VINA_CAROUSEL_K2_SLIDE_SPEED_DESC" />
				<field
                    name="paginationSpeed"
                    type="text"
                    label="VINA_CAROUSEL_K2_PAGINATION_SPEED"
                    default="800"
                    description="VINA_CAROUSEL_K2_PAGINATION_SPEED_DESC" />
				<field
                    name="rewindSpeed"
                    type="text"
                    label="VINA_CAROUSEL_K2_REWIND_SPEED"
                    default="1000"
                    description="VINA_CAROUSEL_K2_REWIND_SPEED_DESC" />
				<field
                    name="autoPlay"
                    type="text"
                    label="VINA_CAROUSEL_K2_AUTOPLAY"
                    default="5000"
                    description="VINA_CAROUSEL_K2_AUTOPLAY_DESC" />
				<field
                    name="stopOnHover"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_STOP_ON_HOVER"
                    description="VINA_CAROUSEL_K2_STOP_ON_HOVER_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="navigation"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_NAVIGATION"
                    description="VINA_CAROUSEL_K2_NAVIGATION_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="rewindNav"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_REWIN_NAV"
                    description="VINA_CAROUSEL_K2_REWIN_NAV_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="scrollPerPage"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_SCROLL_PER_PAGE"
                    description="VINA_CAROUSEL_K2_SCROLL_PER_PAGE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="pagination"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_PAGINATION"
                    description="VINA_CAROUSEL_K2_PAGINATION_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="paginationNumbers"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_PAGINATION_NUMBERS"
                    description="VINA_CAROUSEL_K2_PAGINATION_NUMBERS_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="responsive"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_RESPONSIVE"
                    description="VINA_CAROUSEL_K2_RESPONSIVE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="autoHeight"
                    type="radio"
                    default="0"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_AUTO_HEIGHT"
                    description="VINA_CAROUSEL_K2_AUTO_HEIGHT_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="mouseDrag"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_MOUSE_DRAG"
                    description="VINA_CAROUSEL_K2_MOUSE_DRAG_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field
                    name="touchDrag"
                    type="radio"
                    default="1"
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_K2_TOUCH_DRAG"
                    description="VINA_CAROUSEL_K2_TOUCH_DRAG_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
			</fieldset>
			
			<!-- Source Block -->
			<fieldset name="source">
				<field 
					name="source" 
					type="list" 
					default="filter" 
					label="VINA_SCROLLER_K2_SOURCE" 
					description="VINA_SCROLLER_K2_SOURCE_DESC">
						<option value="filter">Retrieve items from Categories</option>
						<option value="specific">Select specific items</option>
                </field>
				<field name="" type="header" default="VINA_SCROLLER_K2_SOURCE_CATEGORIES" label="" description=""/>
				<field 
					name="catfilter" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_CATEGORY_FILTER" 
					description="VINA_SCROLLER_K2_CATEGORY_FILTER_DESC">
						<option value="0">All</option>
						<option value="1">Select</option>
                </field>
				<field 
					name="category_id" 
					type="categoriesmultiple" 
					default="" 
					label="VINA_SCROLLER_K2_CATEGORY" 
					description="VINA_SCROLLER_K2_CATEGORY_DESC"/>
				<field 
					name="getChildren" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_GET_CHILDREN" 
					description="VINA_SCROLLER_K2_GET_CHILDREN_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemCount" 
					type="hidden" 
					size="4" 
					default="5" 
					label="VINA_SCROLLER_K2_ITEM_COUNT" 
					description="VINA_SCROLLER_K2_ITEM_COUNT_DESC"/>
				<field 
					name="itemsOrdering" 
					type="list" 
					default="" 
					label="VINA_SCROLLER_K2_ITEM_ORDERING" 
					description="VINA_SCROLLER_K2_ITEM_ORDERING_DESC">
						<option value="">Default</option>
						<option value="date">Oldest First</option>
						<option value="rdate">Most Recent First</option>
						<option value="publishUp">Recently Published</option>
						<option value="alpha">Title Alphabetical</option>
						<option value="ralpha">Title Reverse Alphabetical</option>
						<option value="order">Ordering</option>
						<option value="rorder">Ordering Reverse</option>
						<option value="hits">Most Popular</option>
						<option value="best">Highest Rated</option>
						<option value="comments">Most Commented</option>
						<option value="modified">Latest Modified</option>
						<option value="rand">Random Ordering</option>
                </field>
				<field
					name="FeaturedItems"
					type="list"
					default="1"
					label="VINA_SCROLLER_K2_FEATURED_ITEMS"
					description="VINA_SCROLLER_K2_FEATURED_ITEMS_DESC">
						<option value="0">Hide</option>
						<option value="1">Show</option>
						<option value="2">Show only Featured Items</option>
                </field>
				<field 
					name="popularityRange"
					type="list" 
					default="" 
					label="VINA_SCROLLER_K2_TIME_RANGE" 
					description="VINA_SCROLLER_K2_TIME_RANGE_DESC">
						<option value="">All Time</option>
						<option value="1">1 Day</option>
						<option value="3">3 Days</option>
						<option value="7">1 Week</option>
						<option value="15">2 Weeks</option>
						<option value="30">1 Month</option>
						<option value="90">3 Months</option>
						<option value="180">6 Months</option>
                </field>
				<field name="" type="header" default="VINA_SCROLLER_K2_SELECT_SPECIFIC_ITEMS" label="" description=""/>
				<field 
					name="item" 
					type="item" 
					default="" 
					label="VINA_SCROLLER_K2_ADD_ITEMS" 
					description="VINA_SCROLLER_K2_ADD_ITEMS_DESC"/>
				<field
					name="items" 
					type="items" 
					default="" 
					label="VINA_SCROLLER_K2_REORDER_ITEMS" 
					description="VINA_SCROLLER_K2_REORDER_ITEMS_DESC"/>
				<field name="" type="header" default="VINA_SCROLLER_K2_OPTIONS" label="" description=""/>
				<field 
					name="itemTitle"
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_TITLE" 
					description="VINA_SCROLLER_K2_TITLE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemIntroText" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_INTROTEXT" 
					description="VINA_SCROLLER_K2_INTROTEXT_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemIntroTextWordLimit" 
					type="text" 
					size="4" 
					default="" 
					label="VINA_SCROLLER_K2_WORD_LIMIT" 
					description="VINA_SCROLLER_K2_WORD_LIMIT_DESC"/>
				<field
					name="itemImage" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_IMAGE" 
					description="VINA_SCROLLER_K2_IMAGE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemImgSize" 
					type="list" 
					default="Medium" 
					label="VINA_SCROLLER_K2_IMAGE_SIZE" 
					description="VINA_SCROLLER_K2_IMAGE_SIZE_DESC">
						<option value="XSmall">XSmall</option>
						<option value="Small">Small</option>
						<option value="Medium">Medium</option>
						<option value="Large">Large</option>
						<option value="XLarge">XLarge</option>
                </field>
				<field 
					name="itemCategory" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_DISPLAY_CATEGORY" 
					description="VINA_SCROLLER_K2_DISPLAY_CATEGORY_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemDateCreated" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_CREATED_DATE" 
					description="VINA_SCROLLER_K2_CREATED_DATE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
				<field 
					name="itemHits" 
					type="radio" 
					default="0" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_HITS" 
					description="VINA_SCROLLER_K2_HITS_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
                <field 
					name="itemReadMore" 
					type="radio" 
					default="1" 
					class="btn-group btn-group-yesno"
					label="VINA_SCROLLER_K2_READ_MORE" 
					description="VINA_SCROLLER_K2_READ_MORE_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
                </field>
			</fieldset>
			
			<!-- Advanced Block -->
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					default="_:default"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
						<option value="1">JGLOBAL_USE_GLOBAL</option>
						<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>